<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wper.dao.TeacherDao">
    <!-- 1.获取所有教师信息 -->
    <select id="getAllTeacher" resultType="Teacher">
       select id,name,introduce,pic
       from teacher
    </select>
    <!-- 2.添加教师信息-->
    <insert id="addTeacher" parameterType="Teacher">
        insert into teacher(id,name,introduce,pic)
        values (#{id},#{name},#{introduce},#{pic})
    </insert>
    <!-- 3.根据ID删除教师-->
    <delete id="deleteTeacherById" parameterType="int">
        delete from teacher where id=#{id}
    </delete>
    <!-- 4.根据ID查询教师-->
    <select id="getTeacherById" resultType="Teacher">
        select id,name,introduce,pic
       from teacher
       where id=#{id}
    </select>
    <!-- 5.修改教师信息-->
    <update id="updateTeacher" parameterType="Teacher">
        update teacher
        set name=#{name},introduce=#{introduce},pic=#{pic}
        where id=#{id}
    </update>
</mapper>